Import('*')

env.Append(CPPPATH = ['#core'])

module_targets = dict()
core_sources = []
get_sources_recursive(core_sources, 'core/', '*.cpp')
core_flags = ['-std=c++1z', '-g', '-Wall', '-fno-exceptions', '-fno-rtti', '-D_DEBUG', '-Wno-pragmas']
module_targets['core'] = env.Library(target = env.set_target('liboak.a'), source = core_sources, CXXFLAGS = core_flags)

Return('module_targets')