Import('*')

import os

env.Append(CPPPATH = ['#core'], LIBPATH = [os.path.join('#$BINDIR', 'core')])

module_targets = {}
core_sources = []
get_sources_recursive(core_sources, 'core/', '*.cpp')
module_targets['core'] = env.Library(target = 'liboak.a', source = core_sources)

Return('module_targets')