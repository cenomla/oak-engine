Import('*')

module_targets = dict()
sandbox_flags = ['-std=c++1z', '-g', '-Wall', '-fno-exceptions', '-fno-rtti', '-D_DEBUG', '-Wno-pragmas']
sandbox_libs = ['oak', 'vulkan', 'GL', 'glad', 'lua', 'enet', 'glfw3', 'wayland-cursor', 'wayland-client', 'wayland-egl', 'xkbcommon', 'm', 'pthread', 'dl']
module_targets['sandbox'] = env.Program(target = env.set_target('sandbox'), source = 'main.cpp', CXXFLAGS = sandbox_flags, LIBS = sandbox_libs)

Return('module_targets')