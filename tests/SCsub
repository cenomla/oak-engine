Import('*')

module_targets = dict()
unit_libs = ['oak', 'vulkan', 'GL', 'glad', 'lua', 'enet', 'glfw3', 'X11', 'Xrandr', 'Xinerama', 'Xcursor', 'Xxf86vm', 'Xi', 'stdc++fs', 'm', 'pthread', 'dl']

def buildTest(name):
	module_targets[name] = env.Program(target = name, source = [name + '.cpp'], LIBS = unit_libs)

buildTest('buffer')
buildTest('equeue')
buildTest('benchmark')
buildTest('resource_handler')
buildTest('filesystem')

Return('module_targets')